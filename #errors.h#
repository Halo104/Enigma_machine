/* error codes  */
#ifndef ERROR_CODES
#define ERROR_CODES

#define INSUFFICIENT_NUMBER_OF_PARAMETERS         1  //commandline
#define INVALID_INPUT_CHARACTER                   2  //input String
#define INVALID_INDEX                             3  //0 to 25 in a file
#define NON_NUMERIC_CHARACTER                     4  //characters in file
#define IMPOSSIBLE_PLUGBOARD_CONFIGURATION        5  //plugboard
#define INCORRECT_NUMBER_OF_PLUGBOARD_PARAMETERS  6  //plugboard
#define INVALID_ROTOR_MAPPING                     7  //rotor
#define NO_ROTOR_STARTING_POSITION                8  //rotor
#define INVALID_REFLECTOR_MAPPING                 9  //reflector
#define INCORRECT_NUMBER_OF_REFLECTOR_PARAMETERS  10 //reflector
#define ERROR_OPENING_CONFIGURATION_FILE          11 //general file reading
#define NO_ERROR                                  0

#endif //ERROR_CODES
